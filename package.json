{
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "start": "pnpm run -C start dev",
    "dev:docs": "pnpm run -C docs dev",
    "build:docs": "vite build docs",
    "build:components": "vite build --config vite.config.ts",
    "build:theme": "vite build --config vite.config.theme.ts",
    "build:css": "vite build --config vite.config.css.ts",
    "move": "node script/move-file.js",
    "preinstall": "node ./scripts/preinstall.js",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 && pretty-quick --check --branch master",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json && pretty-quick --branch master",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "commit": "cz"
  },
  "license": "ISC",
  "dependencies": {
    "@tyh-ui2/components": "workspace:*",
    "@tyh-ui2/style": "workspace:*",
    "@tyh-ui2/utils": "workspace:*",
    "sass": "^1.50.0",
    "unplugin-vue-setup-extend-plus": "^0.3.2",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^1.2.0",
    "vue": "^3.2.31"
  },
  "lint-staged": {
    "*.{vue,js,ts,md,json}": "prettier --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@vitejs/plugin-vue": "^2.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.5.4",
    "vite": "^2.8.0",
    "vue-router": "^4.0.13",
    "vue-tsc": "^0.29.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
